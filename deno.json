{
  "tasks": {
    "dev": "deno run --watch src/mod.ts",
    "build": "deno bundle src/mod.ts dist/mod.js",
    "typecheck": "deno check **/*.ts",
    "lint": "deno lint src/",
    "format": "deno fmt src/",
    "prepublishOnly": "deno task test && deno task lint && deno task typecheck"
  },
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  }
}
